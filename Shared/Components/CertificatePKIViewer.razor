
<CertificateViewer Class="mt-2"
    Title="@Title"
    JwtHeader="@JwtHeaderWithx5c"
                   EncodeCertificate="@EncodeCertificate"
                   
    IntermediateResolved = "(x509Encoded) => { 
        IntermediateCertificate = x509Encoded;
   }"

   CrlResolved = "(x509Encoded) => { 
        CRL = x509Encoded;
   }"
/>


@if (CRL != null)
{
    <MudExpansionPanels Class="mt-2">
        <MudExpansionPanel Expanded="true" Style="background-color: #EDE7F6">
            <TitleContent>
                <MudText Typo="Typo.h6">Certificate Revocation List:</MudText>
            </TitleContent>
           
            <ChildContent>
                <MudCard Class="mt-4">
                    <MudCardContent>
                        <pre>@CRL</pre>
                    </MudCardContent>
                </MudCard>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>
}


@if (IntermediateCertificate != null)
{
    <CertificatePKIViewer Class="mt-2"
                          Title="Intermediate Certificate"
                          EncodeCertificate="@IntermediateCertificate" />
    
}
