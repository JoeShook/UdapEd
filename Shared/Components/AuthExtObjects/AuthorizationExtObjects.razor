<MudCard Class="pa-2 ma-2" Elevation="3" >
    <MudCardContent>
        <MudGrid>
            <MudItem lg="6" md="12">

                <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                    <MudTabPanel Text="hl7-b2b">
                        <Hl7B2bForm @ref="_hl7B2BForm" OnUpdateEditor="HandleUpdateEditor" />
                    </MudTabPanel>
                    <MudTabPanel Text="hl7-b2b for TEFCA">
                        <Hl7B2bTefcaForm @ref="_hl7B2BTefcaForm" OnUpdateEditor="HandleUpdateEditor"  />
                    </MudTabPanel>
                    <MudTabPanel Text="hl7-b2b-user">
                        <Hl7B2bUserForm @ref="_hl7B2BUserForm" OnUpdateEditor="HandleUpdateEditor" />
                    </MudTabPanel>
                    <MudTabPanel Text="tefca_ias">
                        <TefcaIasForm @ref="_tefcaIasForm" OnUpdateEditor="HandleUpdateEditor" />
                    </MudTabPanel>
                    <MudTabPanel Text="tefca_smart">
                    </MudTabPanel>
                </MudTabs>
            </MudItem>
            <MudItem lg="6" md="12">
                <MudGrid Justify="Justify.FlexEnd">
                    <MudItem>
                        <MudButton Class="ma-2" Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveChanges">Save Custom Edits</MudButton>
                    </MudItem>
                </MudGrid>
                <StandaloneCodeEditor @ref="_editor" Id="authExtObjectEditor"
                                      ConstructionOptions="EditorOptions"
                                      OnDidInit="EditorOnDidInit"/>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>